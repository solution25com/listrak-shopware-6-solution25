{
  "name": "solution25/listrak",
  "description": "Listrak - Shopware 6 Plugin",
  "type": "shopware-platform-plugin",
  "version": "1.0.21",
  "license": "MIT",
  "authors": [
    {
      "name": "solution25",
      "email": "info@solution25.com",
      "homepage": "https://solution25.com/"
    }
  ],
  "require": {
    "shopware/core": "~6.6.0",
    "shopware/storefront": "^6.6",
    "nicolab/php-ftp-client": "^2.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7"
  },
  "extra": {
    "shopware-plugin-class": "Listrak\\Listrak",
    "plugin-icon": "src/Resources/config/plugin.png",
    "label": {
      "de-DE": "Listrak Plugin",
      "en-GB": "Listrak Plugin"
    },
    "description": {
      "de-DE": "Listrak Marketing Automation Plugin f√ºr Shopware",
      "en-GB": "Listrak marketing automation plugin for Shopware"
    },
    "manufacturerLink": {
      "de-DE": "https://solution25.com/",
      "en-GB": "https://solution25.com/en/home_en/"
    },
    "supportLink": {
      "de-DE": "https://solution25.com/",
      "en-GB": "https://solution25.com/en/home_en/"
    }
  },
  "autoload": {
    "psr-4": {
      "Listrak\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Listrak\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@enable-precommit"
    ],
    "post-update-cmd": [
      "@enable-precommit"
    ],
    "enable-precommit": [
      "cp ./pre-commit .git/hooks/pre-commit",
      "chmod +x .git/hooks/pre-commit"
    ]
  }
}
